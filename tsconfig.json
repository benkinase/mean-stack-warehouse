{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "pretty": true,
    "outDir": "./build",
    "baseUrl": "./src",
    /* Strict Type-Checking Options */
    //"strict": true,
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/.ts"],
  "exclude": ["node_modules"]
}
